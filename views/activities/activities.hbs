<div class="container">
	<div class="row">
		<div class="header">
			<div class="col-lg-9">
				<h1>Actividades</h1>
			</div>
			<div class="col-lg-3 text-right">
				<form method="get" action="/activities/register">
					<input id="button-challenge" type="submit" value="Nueva Actividad" class="btn btn-primary btn-lg"/>
				</form>
			</div>
		</div>
	</div>
	<hr />
	{{#each activities}}
	<div class="row well">
		<div class="col-lg-12">
			<h3 class="text-uppercase">{{activityName}}</h3>
			<h5>{{description}}</h5>
		</div>
	</div>
	{{/each}}
</div>
